{% extends "base.html.twig" %}

{% block body %}
<div class="container" style="margin-top: 10rem;">
<h2 class="text-center">Not User Apply list</h2>
{% if applyList is not empty %}
<table id="table"
   data-search="true"
   data-show-search-clear-button="true"
   class="table table-sm table-hover table-striped text-center shadow-sm mt-3">
   <thead>
      <tr>
         <th>Advertisement</th>
         <th>User</th>
         <th>Message</th>
         <th>Details</th>
         <th>Delete</th>
      </tr>
   </thead>
   <tbody>
   {% for apply in applyList %}
      <tr>
         <td>{{ apply.advertisement.title }}</td>
         <td>{{ apply.email }}</td>
         <td>{{ apply.message }}</td>
         <td><a href=""><i class="bi bi-card-text text-primary"></i></a></td>
         <td><a href=""><i class="bi bi-trash text-danger"></i></a></td>
      </tr>
   {% endfor %}
   </tbody>
</table>
{% else %}
<h4 class="text-center">No applications at the moment</h4>
{% endif %}
</div>
<script>
   $(function() {
      $('#table').bootstrapTable()
   })
</script>

{% endblock %}