{% extends "base.html.twig" %}

{% block body %}
<div class="container" style="margin-top: 10em;">
<div class="card my-2 w-80">
<div class="card card-body">
<div class=" image d-flex flex-column justify-content-center align-items-center">
{% if app.user.roles[0]=='ROLE_RECRUITER' %}
   <span class="h5"> RECRUITER </span>
{% elseif app.user.roles[0]=='ROLE_ADMIN' %}
   <span class="h5"> ADMIN </span>
{% else %}
   <span class="h5"> CANDIDAT </span>
{% endif %}

<div class="my-4">
{% if app.user.roles[0]=='ROLE_ADMIN' %}
<img src="{{ asset('asset/icon-admin.png') }}" height="150" width="150"/>
{% elseif app.user.roles[0]=='ROLE_RECRUITER' %}
<img src="{{ asset('asset/3729.png') }}" height="150" width="150"/>
{% else %}
<img src="{{ asset('asset/Sample_User_Icon.png') }}" height="150" width="150"/>
{% endif %}
</div>
   <p class="lead text-center">{{user.name}} {{user.firstName}}
   <br><i class="bi bi-envelope-fill"></i> {{user.email}}
   <br><i class="bi bi-telephone-fill"></i> ?
   <br><i class="bi bi-geo-alt-fill"></i> {{user.city}}
   {% if not user.company =="" %}
   <br><i class="bi bi-building"></i> {{user.company}}
   {% endif %}
   </p>
   <a class="btn btn-outline-warning" href="{{path('update_profile', {id:app.user.id} )}}" role="button"><i class="bi bi-gear-fill"></i> edit profil </a>
   {# <p class="card-text"><br> Description :</p>  
   <div class="card card-body">Empty</div>    #}
   </div>
</div>
</div>
</div>
{% endblock %}